<!DOCTYPE html>
<html>
<head>
  <title>Upwave</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if flash[:notice] %>
      <div class="messagebox info"><span><%= notice %></span></div> 
  <% end %>
  <% if flash[:alert] %>
      <div class="messagebox error"><span><%= alert %></span></div>
  <% end %>

<%= yield %>

</body>
</html>
